#include<stdio.h>

struct Pessoa{
    char nome[100];
    char endereco[100];

    void imprimir()
    {
        printf("nome: %s\n", nome);
        printf("endereco: %s\n", endereco);
    }

    void ler()
    {
        printf("Digite nome: ");
        scanf("%[^\n]%*c", nome);
        printf("Digite endereco: ");
        scanf("%[^\n]%*c", endereco);

    }
};

int main(){

    Pessoa p;
    p.ler();
    p.imprimir();

    return 0;
}
